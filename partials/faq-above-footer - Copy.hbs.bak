---
{
    "stream": {
        "$id": "ds-faqs",
        "source": "knowledgeGraph"
      "filter": {
        "entityTypes": [
          "ce_dotsquaresHotel"
        ]
      },
      "fields": [
        "id",
        "name",
        "slug",
        "description",
        "c_locations.name",
        "c_locations.question",
        "c_locations.answer"
      ],
      "localization": {
          "locales": ["en"]
      }
    }
}
