---
{
    "stream": {
        "$id": "ds_productCategories",
        "source": "knowledgeGraph",
        "destination": "pages",
      "filter": {
        "entityTypes": [
          "ce_categoriesPage"
        ]
      },
      "fields": [
        "id",
        "name",
        "c_categories.name",
        "c_categories.slug",
        "c_categories.c_image"
      ],
      "localization": {
          "locales": ["en"]
      }
    },
    "urlFormat": "product-categories.html"
}
---
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{{name}}</title>
        <meta name="description" content="{{description}}">
        {{>head}}
    {{!-- <link href="https://unpkg.com/tailwindcss/dist/tailwind.min.css" rel="stylesheet"> --}}
    <!--Replace with your tailwind.css once created-->
    <link rel="stylesheet" href="/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/fonts/fonts.css" />
    </head>
    <body class="bg-white text-gray-600 font-Poppins leading-normal text-base tracking-normal">
    {{>top-nav}}
    {{>navbar}}
    <div class="w-full max-w-7xl mx-auto py-8 px-6 text-center">
      <div class="uppercase tracking-wide no-underline hover:no-underline font-bold text-gray-800 text-2xl md:mb-8">Categories</div>
    </div>
    <div class="flex flex-wrap w-full max-w-7xl mx-auto">
    {{#each c_categories}}
        <div class="w-full sm:w-1/2 md:w-1/2 px-4 text-center mb-10">
            <a class="tracking-wide no-underline hover:no-underline font-normal text-gray-800 text-base mb-8 hover:text-primary" href={{slug}}>
                <div class="relative">
                    <img class="w-full" src="{{c_image}}" />
                    <div class="w-full absolute bottom-10 right-0 text-4xl text-left bg-gradient-to-r from-red-400 bg-opacity-25 p-5 text-textwhite hover:text-textblack font-Poppins">{{name}}</div>
                </div>
            </a>
        </div>
    {{/each}}
    </div>
    {{>footer}}
    </body>
</html>